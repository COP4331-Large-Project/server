{
  "name": "website",
  "version": "1.0.0",
  "description": "<p align=\"center\">",
  "main": "index.js",
  "scripts": {
    "start": "cd server && npm start",
    "install-all": "npm install --prefix ./server && npm install --prefix ./client",
    "test": "echo \"Error: no test specified\" && exit 1",
    "heroku-postbuild": "npm install --prefix ./server && cd client && npm install --production=false && npm run build"
  },
  "cacheDirectories": [
    "client/node_modules",
    "server/node_modules"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/COP4331-Large-Project/website.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/COP4331-Large-Project/website/issues"
  },
  "homepage": "https://github.com/COP4331-Large-Project/website#readme",
  "devDependencies": {
    "husky": "^5.1.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*{.js,.jsx}": [
      "npm run lint"
    ],
    "./src/**/*{.scss,.js,.jsx}": [
      "prettier --write"
    ],
    "../server/src/**/*.js": [
      "prettier --write",
      "npm run lint"
    ]
  }
}
